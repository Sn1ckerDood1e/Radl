# App URL (used for QR codes, email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Upstash Redis (rate limiting)
# Get these from: https://console.upstash.com/ -> Create Database -> REST API
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Push Notifications (generate with: npx web-push generate-vapid-keys --json)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_SUBJECT=mailto:admin@radl.sol

# Email (Resend)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=
RESEND_FROM_ADDRESS=Radl <onboarding@resend.dev>

# Supabase Service Role (for admin operations like user email lookup)
# Get from: Supabase Dashboard -> Settings -> API -> service_role key
SUPABASE_SERVICE_ROLE_KEY=

# Regatta Central API (OAuth2 password grant)
# Register your app at regattacentral.com/api to get these credentials
RC_CLIENT_ID=
RC_CLIENT_SECRET=
